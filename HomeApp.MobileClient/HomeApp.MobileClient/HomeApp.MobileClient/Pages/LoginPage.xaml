<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="HomeApp.MobileClient.Pages.LoginPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ext="clr-namespace:HomeApp.MobileClient.Extensions"
    xmlns:local="clr-namespace:HomeApp.MobileClient.Pages"
    NavigationPage.HasNavigationBar="False">

    <StackLayout
        x:Name="stackLayout"
        HorizontalOptions="Center"
        VerticalOptions="Center">
        <Label
            Padding="30,10,30,10"
            FontSize="Title"
            HorizontalTextAlignment="Center"
            Text="HomeApp - Ваш умный дом"
            VerticalTextAlignment="Center" />
        <Button
            x:Name="loginButton"
            Clicked="Login_ClickAsync"
            CornerRadius="{ext:ButtonViewExtension ButtonStyle=Round}"
            Text="{x:Static local:LoginPage.BUTTON_TEXT}" 
            Style="{StaticResource buttonStyle}"/>
        <Label
            x:Name="infoMessage"
            Padding="30,10,30,10"
            FontSize="{DynamicResource Key=errorFont}"
            HorizontalTextAlignment="Center"
            TextColor="{DynamicResource Key=errorColor}"
            VerticalTextAlignment="Center" />
        <Label
            x:Name="runningDevice"
            Padding="30,10,30,10"
            FontSize="15"
            HorizontalTextAlignment="Center"
            VerticalTextAlignment="Center" />
    </StackLayout>
</ContentPage>