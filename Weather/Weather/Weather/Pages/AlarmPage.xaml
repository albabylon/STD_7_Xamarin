<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Weather.Pages.AlarmPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <StackLayout>
        <Label
            Padding="30,10,30,10"
            FontSize="Title"
            HorizontalOptions="Center"
            Text="Установить будильник" />

        <StackLayout Margin="10">
            <Label Text="Дата" />
            <DatePicker x:Name="datePicker" Format="dd/MM/yyy" />

            <Label Text="Время" />
            <TimePicker x:Name="timePicker" Format="00:00:00" />

            <Label x:Name="headerVolume" Text="Громкость" />
            <Slider
                x:Name="sliderVolume"
                Maximum="100"
                MaximumTrackColor="Gray"
                Minimum="0"
                MinimumTrackColor="DeepPink"
                ThumbColor="RoyalBlue"
                ValueChanged="SliderVolumeChanged" />

            <Label Text="Повторять каждый день" />
            <Switch x:Name="repeateSwitch" ThumbColor="RoyalBlue" HorizontalOptions="Start"/>
        </StackLayout>

        <Button
            Clicked="SaveClicked"
            Text="Сохранить"
            VerticalOptions="EndAndExpand" />
    </StackLayout>
</ContentPage>